{
  "name": "@zudoku/nextjs",
  "version": "0.1.0",
  "description": "Next.js integration for Zudoku API documentation",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "test": "vitest run"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zuplo/zudoku.git",
    "directory": "integrations/nextjs"
  },
  "dependencies": {
    "@zudoku/core": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.0"
  },
  "peerDependencies": {
    "next": "^14.0.0 || ^15.0.0",
    "react": "^18.0.0 || ^19.0.0"
  }
}
