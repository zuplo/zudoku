{
  "search.exclude": {
    // Avoid polluting search results with lockfile content
    "pnpm-lock.yaml": true
  },
  "npm.packageManager": "pnpm",
  "vitest.rootConfig": "vitest.config.ts",
  "oxc.fmt.configPath": ".oxfmtrc.json",
  "editor.defaultFormatter": "oxc.oxc-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit"
  },
  "editor.rulers": [80],
  "[markdown]": {
    "editor.wordWrapColumn": 100,
    "editor.rulers": [100]
  },
  "[mdx]": {
    "editor.wordWrapColumn": 100,
    "editor.rulers": [100]
  },
  "files.associations": {
    "nx.json": "jsonc",
    "project.json": "jsonc",
    "biome.jsonc": "jsonc",
    "*.mdx": "markdown"
  },
  "tailwindCSS.experimental.configFile": "packages/zudoku/src/app/main.css"
}
