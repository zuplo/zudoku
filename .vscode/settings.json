{
  //...
  "search.exclude": {
    // Avoid polluting search results with lockfile content
    "pnpm-lock.yaml": true
  },
  "npm.packageManager": "pnpm",
  // For those using file-nesting, nest the new files. E.g.:
  "explorer.fileNesting.patterns": {
    "package.json": "pnpm-workspace.yaml, pnpm-lock.yaml"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,

  "vitest.rootConfig": "packages/zudoku/vitest.config.ts",

  // Prettier for Markdown and YAML files since Biome doesn't support them yet.
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.wordWrapColumn": 100,
    "editor.rulers": [100]
  },
  "[mdx]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.wordWrapColumn": 100,
    "editor.rulers": [100]
  },

  // Set it explicitely to be sure: https://github.com/biomejs/biome-vscode/discussions/230
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true
  },
  "files.associations": {
    "nx.json": "jsonc",
    "project.json": "jsonc",
    "*.mdx": "markdown"
  },
  "tailwindCSS.experimental.configFile": "packages/zudoku/src/app/main.css"
}
