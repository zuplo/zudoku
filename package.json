{
  "name": "root",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "nx run-many -t=build -p zudoku config",
    "lint": "eslint --cache --fix .",
    "lint:ci": "eslint .",
    "lint:md": "node ./scripts/check-admonitions.mjs",
    "format": "prettier --write .",
    "format:ci": "prettier --check .",
    "prepare": "lefthook install",
    "release:pre": "gh workflow run release.yaml -f releaseType=prerelease",
    "release:minor": "gh workflow run release.yaml -f releaseType=minor",
    "local": "cp .env.example .env",
    "build:clean": "tsc --build --clean",
    "reset": "nx reset && npm run build:clean",
    "clean": "git clean -Xfde !.env"
  },
  "engines": {
    "node": ">=20.19.0 <21.0.0 || >=22.7.0",
    "pnpm": ">=10"
  },
  "devDependencies": {
    "@nx/eslint": "21.3.7",
    "@nx/vite": "21.2.4",
    "@nx/web": "21.2.4",
    "@typescript-eslint/eslint-plugin": "8.38.0",
    "@typescript-eslint/parser": "8.38.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.20",
    "lefthook": "^1.12.2",
    "nx": "21.2.4",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.1.0",
    "typescript": "5.8.3"
  },
  "pnpm": {
    "overrides": {
      "braces": ">=3.0.3",
      "dset": ">=3.1.4",
      "serve-handler>path-to-regexp": ">=3.3.0",
      "react-remove-scroll": ">=2.6.2",
      "use-sidecar": ">=1.1.3",
      "@babel/runtime": ">=7.26.10",
      "@babel/helpers": ">=7.26.10"
    },
    "patchedDependencies": {
      "decode-named-character-reference@1.0.2": "patches/decode-named-character-reference@1.0.2.patch"
    },
    "onlyBuiltDependencies": [
      "@clerk/shared",
      "@swc/core",
      "core-js",
      "esbuild",
      "nx",
      "unrs-resolver"
    ]
  },
  "nx": {
    "includedScripts": [
      "lint",
      "lint:ci",
      "lint:md",
      "format",
      "format:ci"
    ]
  },
  "packageManager": "pnpm@10.13.1"
}
