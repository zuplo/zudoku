{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "My Zuplo API"
  },
  "servers": [
    {
      "url": "https://jsonplaceholder.typicode.com/",
      "description": "Example API server"
    }
  ],
  "paths": {
    "/todos": {
      "get": {
        "summary": "Get all API keys",
        "responses": {
          "200": {
            "description": "A list of API keys"
          }
        }
      }
    },
    "/mcp": {
      "post": {
        "summary": "MCP Server",
        "operationId": "mcpServerHandler",
        "x-zuplo-route": {
          "corsPolicy": "none",
          "handler": {
            "export": "mcpServerHandler",
            "module": "$import(@zuplo/runtime)",
            "options": {
              "debugMode": true,
              "files": [
                {
                  "path": "./config/routes.oas.json",
                  "operationIds": ["todo"]
                }
              ]
            }
          }
        }
      }
    }
  }
}
