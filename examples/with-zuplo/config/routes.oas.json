{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "My Zuplo API"
  },
  "servers": [
    {
      "url": "https://jsonplaceholder.typicode.com/",
      "description": "Example API server"
    }
  ],
  "paths": {
    "/todos": {
      "get": {
        "operationId": "getTodos",
        "summary": "Get all todos",
        "responses": {
          "200": {
            "description": "A list of todos"
          }
        }
      },
      "post": {
        "operationId": "createTodo",
        "summary": "Create a todo",
        "x-zuplo-mcp-tool": {
          "name": "create_todo_tool",
          "description": "AI instructions for creating a new todo"
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["text"],
                "properties": {
                  "text": {
                    "type": "string",
                    "description": "The todo text"
                  }
                },
                "example": {
                  "text": "mow the lawn"
                }
              }
            }
          }
        }
      }
    },
    "/mcp": {
      "post": {
        "summary": "MCP Server",
        "operationId": "mcpServerHandler",
        "x-zuplo-route": {
          "corsPolicy": "none",
          "handler": {
            "export": "mcpServerHandler",
            "module": "$import(@zuplo/runtime)",
            "options": {
              "debugMode": true,
              "files": [
                {
                  "path": "./config/routes.oas.json",
                  "operationIds": ["getTodos", "createTodo"]
                }
              ]
            }
          }
        }
      }
    }
  }
}
