{
  "openapi": "3.0.3",
  "info": {
    "title": "Single Environment Server API Example",
    "version": "1.0.0",
    "description": "Demonstrates defining servers at global, path, and operation levels."
  },
  "servers": [
    {
      "url": "https://api.example.com/v1"
    },
    {
      "url": "https://staging-api.example.com/v1"
    }
  ],
  "paths": {
