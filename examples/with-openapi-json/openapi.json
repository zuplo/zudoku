      "servers": [
        {
          "url": "https://users-service.example.com/api"
        }
      ],
      "get": {
        "tags": ["Users"],
        "responses": {
          "200": {
            "description": "A list of users"
          }
        },
        "operationId": "90ce2450-f7a1-48c7-ac50-f95012326cd4"
      },
      "post": {
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created"
          }
        },
        "operationId": "1c913ca5-9793-41f2-8cbd-7b8b76074bd5"
