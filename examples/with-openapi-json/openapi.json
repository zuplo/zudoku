          }
        },
        "operationId": "94edecc0-0226-4743-8b40-9bd358ab8d88"
      },
      "patch": {
        "tags": ["Products"],
        "servers": [
          {
            "url": "https://admin-dashboard.example.com/product-ops"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Product status updated"
          }
        },
        "operationId": "ebf14c73-a829-4d78-8af6-591263d7903f"
