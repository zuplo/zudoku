{
  "compilerOptions": {
    "composite": false,
    "rootDir": "src",
    "outDir": "dist",
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "WebWorker"],
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "strictNullChecks": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "types": ["vite/client", "@testing-library/jest-dom", "vitest/globals"],
    "paths": {
      "zudoku/components": ["./src/lib/components/index.ts"],
      "zudoku/ui/*": ["./src/lib/ui/*"],
      "zudoku/plugins/openapi": ["./src/lib/plugins/openapi/index.ts"],
      "zudoku/plugins/search-inkeep": [
        "./src/lib/plugins/search-inkeep/index.tsx"
      ],
      "zudoku/plugins/search-pagefind": [
        "./src/lib/plugins/search-pagefind/index.tsx"
      ],
      "zudoku/plugins": ["./src/lib/core/plugins.ts"],
      "zudoku/plugins/api-keys": ["./src/lib/plugins/api-keys/index.tsx"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts", "src/**/*.tsx", "lucide-react.d.ts"]
}
