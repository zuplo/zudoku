{
  "compilerOptions": {
    "composite": false,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "WebWorker"],
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false,
    "strict": true,
    "strictNullChecks": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "types": ["vite/client"],
    "paths": {
      "zudoku/components": ["src/lib/components/index.ts"],
      "zudoku/ui/*": ["src/lib/ui/*"],
      "zudoku/openapi-worker": [
        "src/lib/plugins/openapi/client/createWorkerClient.ts"
      ],
      "zudoku/plugins/openapi": ["src/lib/plugins/openapi/index.ts"],
      "zudoku/plugins/search-inkeep": [
        "src/lib/plugins/search-inkeep/index.tsx"
      ]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
