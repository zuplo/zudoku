{
  "name": "config",
  "$schema": "../../node_modules/nx/schemas/nx-schema.json",
  "targets": {
    "build": {
      "inputs": [
        "{workspaceRoot}/zudoku/src/**/*.ts",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/package.json"
      ],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "build:types": {
      "dependsOn": ["build"]
    },
    "build:ci": {
      "dependsOn": ["build:types"]
    }
  }
}
