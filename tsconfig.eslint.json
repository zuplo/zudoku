{
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.mjs"],
  "compilerOptions": {
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": false,
    "strict": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  }
}
